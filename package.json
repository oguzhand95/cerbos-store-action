{
  "name": "cerbos-store-action",
  "version": "0.0.1",
  "private": true,
  "description": "A GitHub action to upload Cerbos policies to Cerbos Hub stores",
  "exports": "./lib/main.js",
  "type": "module",
  "packageManager": "pnpm@10.16.1+sha512.0e155aa2629db8672b49e8475da6226aa4bdea85fdcdfdc15350874946d4f3c91faaf64cbdc4a5d1ab8002f473d5c3fcedcd197989cf0390f9badd3c04678706",
  "engines": {
    "node": "22.19.0",
    "pnpm": "10.16.1"
  },
  "scripts": {
    "all:parallel": "concurrently --group --prefix=none",
    "build": "rm -rf dist && ncc build -o dist src/main.ts",
    "eslint:run": "NODE_OPTIONS=--max-old-space-size=3072 eslint --max-warnings=0",
    "lint": "pnpm run all:parallel 'pnpm:lint:check:*'",
    "lint:check:eslint": "pnpm run eslint:run src",
    "lint:check:prettier": "prettier --check src",
    "lint:fix": "pnpm run lint:fix:eslint && pnpm run lint:fix:prettier",
    "lint:fix:eslint": "pnpm run eslint:run --fix src",
    "lint:fix:prettier": "prettier --write src",
    "test": "glob -c \"node --import tsx --no-warnings --test\" \"./tests/**/*.test.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerbos/cerbos-store-action.git"
  },
  "keywords": [
    "actions"
  ],
  "author": "Cerbos",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/tool-cache": "^2.0.2",
    "octokit": "^5.0.3",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.4.0",
    "@vercel/ncc": "^0.38.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript-eslint": "^8.43.0"
  }
}
